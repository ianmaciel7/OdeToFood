@using OdeToFood.Core
@model Restaurant
   
<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Location: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <div class="btn-group btn-group-lg" role="group">
            <a class="btn btn-outline-primary" asp-page="./Detail" asp-route-restaurantId="@Model.Id"><i class="bi bi-search h5"></i></a>
            <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-restaurantId="@Model.Id"><i class="bi bi-pen-fill h5"></i></a>
            <a class="btn btn-outline-primary" asp-page="./Delete" asp-route-restaurantId="@Model.Id"><i class="bi bi-trash-fill h5"></i></a>
        </div>
    </div>
</div>
