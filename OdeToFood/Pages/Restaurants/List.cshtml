@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">

            <input type="search" class="form-control" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button class="btn input-group-text" type="button"> <i class="bi bi-search"></i></button>
            </div>

        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td class="align-text-top">@restaurant.Name</td>
            <td class="align-text-top">@restaurant.Location</td>
            <td class="align-text-top">
                <p class="border-2 border-info">
                    @restaurant.Cuisine
                </p>
            </td>
            <td class="align-text-top"><a class="btn btn-lg p-0" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id"><i class="bi bi-clipboard-plus h2 text-info"></i></a></td>
        </tr>
    }
</table>


<div>
    @Model.Message
</div>
